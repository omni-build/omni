{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProjectConfiguration",
  "type": "object",
  "properties": {
    "cache_key": {
      "$ref": "#/$defs/CacheKeyConfiguration",
      "default": {
        "env": [],
        "files": []
      }
    },
    "dependencies": {
      "$ref": "#/$defs/ListConfig",
      "default": {
        "append": []
      }
    },
    "env": {
      "$ref": "#/$defs/ProjectEnvConfiguration",
      "default": {
        "files": [],
        "vars": {}
      }
    },
    "extends": {
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "name": {
      "type": "string"
    },
    "tasks": {
      "$ref": "#/$defs/DictConfig",
      "default": {}
    }
  },
  "required": [
    "name"
  ],
  "$defs": {
    "CacheKeyConfiguration": {
      "type": "object",
      "properties": {
        "env": {
          "$ref": "#/$defs/ListConfig",
          "default": {
            "append": []
          }
        },
        "files": {
          "$ref": "#/$defs/ListConfig",
          "default": {
            "append": []
          }
        }
      }
    },
    "DictConfig": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/TaskConfiguration"
          }
        },
        {
          "type": "object",
          "properties": {
            "merge": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/TaskConfiguration"
              }
            }
          },
          "required": [
            "merge"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/$defs/TaskConfiguration"
              }
            }
          },
          "required": [
            "replace"
          ]
        }
      ]
    },
    "DictConfig2": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "properties": {
            "merge": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "merge"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "required": [
            "replace"
          ]
        }
      ]
    },
    "ListConfig": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/string"
          }
        },
        {
          "type": "object",
          "properties": {
            "merge": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/string"
              }
            }
          },
          "required": [
            "merge"
          ]
        },
        {
          "type": "object",
          "properties": {
            "append": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/string"
              }
            }
          },
          "required": [
            "append"
          ]
        },
        {
          "type": "object",
          "properties": {
            "prepend": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/string"
              }
            }
          },
          "required": [
            "prepend"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "array",
              "items": {
                "$ref": "#/$defs/string"
              }
            }
          },
          "required": [
            "replace"
          ]
        }
      ]
    },
    "ProjectEnvConfiguration": {
      "type": "object",
      "properties": {
        "files": {
          "$ref": "#/$defs/ListConfig",
          "default": {
            "append": []
          }
        },
        "vars": {
          "$ref": "#/$defs/DictConfig2",
          "default": {}
        }
      }
    },
    "TaskConfiguration": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "$ref": "#/$defs/TaskConfigurationLongForm"
        }
      ]
    },
    "TaskConfigurationEnvConfiguration": {
      "type": "object",
      "properties": {
        "vars": {
          "anyOf": [
            {
              "$ref": "#/$defs/DictConfig2"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "TaskConfigurationLongForm": {
      "type": "object",
      "properties": {
        "cache_key": {
          "$ref": "#/$defs/CacheKeyConfiguration",
          "default": {
            "env": [],
            "files": []
          }
        },
        "command": {
          "type": "string",
          "default": ""
        },
        "dependencies": {
          "$ref": "#/$defs/ListConfig",
          "default": {
            "append": []
          }
        },
        "description": {
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "env": {
          "$ref": "#/$defs/TaskConfigurationEnvConfiguration",
          "default": {
            "vars": null
          }
        },
        "output": {
          "$ref": "#/$defs/TaskOutputConfiguration",
          "default": {
            "files": {
              "append": []
            },
            "stderr": true,
            "stdout": true
          }
        }
      }
    },
    "TaskOutputConfiguration": {
      "type": "object",
      "properties": {
        "files": {
          "$ref": "#/$defs/ListConfig",
          "default": {
            "append": []
          }
        },
        "stderr": {
          "type": "boolean",
          "default": true
        },
        "stdout": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "string": {
      "type": "string"
    }
  }
}
