{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ProjectConfiguration",
  "type": "object",
  "properties": {
    "dependencies": {
      "type": "array",
      "default": [],
      "items": {
        "$ref": "#/$defs/string"
      }
    },
    "env": {
      "anyOf": [
        {
          "$ref": "#/$defs/ProjectEnvConfiguration"
        },
        {
          "type": "null"
        }
      ]
    },
    "implicit_dependencies": {
      "type": "boolean",
      "default": false
    },
    "implicit_tasks": {
      "type": "boolean",
      "default": false
    },
    "name": {
      "type": "string"
    },
    "tasks": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": {
        "$ref": "#/$defs/TaskConfiguration"
      }
    }
  },
  "required": [
    "name"
  ],
  "$defs": {
    "ListConfig": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "properties": {
            "append": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "append"
          ]
        },
        {
          "type": "object",
          "properties": {
            "prepend": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "prepend"
          ]
        },
        {
          "type": "object",
          "properties": {
            "append": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "prepend": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "append",
            "prepend"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "replace"
          ]
        }
      ]
    },
    "ProjectEnvConfiguration": {
      "type": "object",
      "properties": {
        "files": {
          "anyOf": [
            {
              "$ref": "#/$defs/ListConfig"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "TaskConfiguration": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "properties": {
            "command": {
              "type": "string"
            },
            "dependencies": {
              "type": "array",
              "default": [],
              "items": {
                "$ref": "#/$defs/string"
              }
            },
            "merge_project_dependencies": {
              "type": "boolean",
              "default": true
            }
          },
          "required": [
            "command"
          ]
        }
      ]
    },
    "string": {
      "type": "string"
    }
  }
}
