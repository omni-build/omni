{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WorkspaceConfiguration",
  "type": "object",
  "properties": {
    "env": {
      "$ref": "#/$defs/WorkspaceEnvConfiguration",
      "default": {
        "files": []
      }
    },
    "name": {
      "type": [
        "string",
        "null"
      ]
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "scripting": {
      "$ref": "#/$defs/ScriptingConfiguration",
      "default": {
        "js_runtime": "auto"
      }
    }
  },
  "required": [
    "projects"
  ],
  "$defs": {
    "JsRuntime": {
      "type": "string",
      "enum": [
        "deno",
        "node",
        "bun",
        "auto"
      ]
    },
    "ScriptingConfiguration": {
      "type": "object",
      "properties": {
        "js_runtime": {
          "$ref": "#/$defs/JsRuntime",
          "default": "auto"
        }
      }
    },
    "WorkspaceEnvConfiguration": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
