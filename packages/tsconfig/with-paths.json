{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "extends": ["./base.json"],
    "compilerOptions": {
        "baseUrl": "${configDir}/",
        "paths": {
            "@/*": ["${configDir}/src/*"]
        }
    },
    "include": ["${configDir}/src/**/*.*"],
    "exclude": ["${configDir}/src/**/*.{spec,test}.*"]
}
